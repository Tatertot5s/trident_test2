{
    "model": {
        "type": "minecraft:select",
        "property": "minecraft:component",
        "component": "minecraft:custom_name",
        "cases": [
            {
                "when": "Command Block Staff",
                "model": {
                    "type": "minecraft:condition",
                    "property": "minecraft:using_item",
                    "on_true": {
                        "type": "minecraft:model",
                        "model": "item/cit/command_block_staff_throwing",
                        "base": "item/cit/command_block_staff_throwing"
                    },
                    "on_false": {
                        "type": "minecraft:model",
                        "model": "item/cit/command_block_staff",
                        "base": "item/cit/command_block_staff"
                    }
                }
            },
            {
                "when": "Riptide Trident",
                "model": {
                    "type": "minecraft:condition",
                    "property": "minecraft:using_item",
                    "on_true": {
                        "type": "minecraft:model",
                        "model": "item/cit/riptide_trident_throwing",
                        "base": "item/cit/riptide_trident_throwing"
                    },
                    "on_false": {
                        "type": "minecraft:model",
                        "model": "item/cit/riptide_trident",
                        "base": "item/cit/riptide_trident"
                    }
                }
            }
        ],
        "fallback": {
            "type": "minecraft:select",
            "cases": [
                {
                    "model": {
                        "type": "minecraft:model",
                        "model": "minecraft:item/trident"
                    },
                    "when": [
                        "gui",
                        "ground",
                        "fixed"
                    ]
                }
            ],
            "fallback": {
                "type": "minecraft:condition",
                "on_false": {
                    "type": "minecraft:special",
                    "base": "minecraft:item/trident_in_hand",
                    "model": {
                        "type": "minecraft:trident"
                    }
                },
                "on_true": {
                    "type": "minecraft:special",
                    "base": "minecraft:item/trident_throwing",
                    "model": {
                        "type": "minecraft:trident"
                    }
                },
                "property": "minecraft:using_item"
            },
            "property": "minecraft:display_context"
        }
    }
}